
  <h1>Users</h1>
  <br>
  <table>
    <thead>
      <tr>
        <th >Name</th>
        <th >Email</th>
        <th >Delete?</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="table-space"><%= user.name %></td>
          <td class="table-space"><%= user.email %></td>

          <td class="table-space">
          <%= form_tag(admin_user_path(user), method: :DELETE) do %>
                  <%= submit_tag "Delete" %>
          <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>
