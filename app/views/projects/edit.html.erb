
<div class="self-centering" style="max-width:800px; margin-top:30px;">
    <%= form_tag(project_path(@project), method: :put) do %>

      <%= label_tag :name %>
      <%= text_field_tag :name, @project.name %>

      <%= label_tag :description %>
      <%= text_field_tag :description, @project.description %>

      <%= label_tag :type %>
      <%=select_tag "Privacy", options_for_select([ "PRIVATE", "PUBLIC" ], @project.privacy) %>


      <%= label_tag "Estimate Effort" %>
      <%= number_field_tag :est_effort, @project.est_effort %>

      <%= submit_tag "Save" %>
    <% end %>
</div>
